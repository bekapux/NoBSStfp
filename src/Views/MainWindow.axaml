<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NoBSSftp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:NoBSSftp.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NoBSSftp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="Root"
        Icon="/Assets/icon.ico"
        UseLayoutRounding="True"
        Title="{Binding AppTitle}">

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="View">
                <NativeMenu>
                    <NativeMenuItem Header="Show Server Explorer"
                                    ToggleType="CheckBox"
                                    IsChecked="{Binding IsSidebarOpen, Mode=TwoWay}"
                                    Click="OnShowServerExplorerMenuItemClick"
                                    IsEnabled="True"/>
                    <NativeMenuItem Header="Show Transfer Queue"
                                    ToggleType="CheckBox"
                                    IsChecked="{Binding ShowTransferQueue, Mode=TwoWay}"
                                    Click="OnShowTransferQueueMenuItemClick"
                                    IsEnabled="True"/>
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="Lock Credential Session"
                                    Click="OnLockCredentialSessionMenuItemClick"/>
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Help">
                <NativeMenu>
                    <NativeMenuItem Header="Manage Trusted Host Keys..."
                                    Click="OnManageTrustedHostKeysMenuItemClick"/>
                    <NativeMenuItemSeparator />
                    <NativeMenuItem Header="About NoBSSftp"
                                    Click="OnAboutMenuItemClick"/>
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <Window.Styles>
        <Style Selector="Border.SidebarToolbar">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="Button.SidebarTopButton">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#2C2C2C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.SidebarTopButton:pointerover">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#3B3B3B"/>
        </Style>
        <Style Selector="Button.SidebarTopButton:pressed">
            <Setter Property="Background" Value="#2F2F2F"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
        </Style>
        <Style Selector="Button.SidebarTopButton.Active">
            <Setter Property="Background" Value="#23405A"/>
            <Setter Property="BorderBrush" Value="#3F6E95"/>
        </Style>
        <Style Selector="Button.SidebarTopButton PathIcon.SidebarGlyph">
            <Setter Property="Foreground" Value="#D4D8DD"/>
        </Style>
        <Style Selector="Button.SidebarTopButton:pointerover PathIcon.SidebarGlyph">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Button.SidebarTopButton.Active PathIcon.SidebarGlyph">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Button.SidebarToggle">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="30"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>
        <Style Selector="Button.SidebarAction">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="MinWidth" Value="34"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="PathIcon.SidebarGlyph">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="ListBox.TabStripList">
            <Setter Property="Background" Value="#121212"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:pointerover">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Border.TabHeader">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="BorderBrush" Value="#2C2C2C"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="10 0 8 0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MinWidth" Value="126"/>
            <Setter Property="MaxWidth" Value="240"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:pointerover Border.TabHeader">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:selected Border.TabHeader">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="BorderBrush" Value="#4B4B4B"/>
        </Style>
        <Style Selector="TextBlock.TabIconGlyph">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="LineHeight" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#97A5B6"/>
        </Style>
        <Style Selector="TextBlock.TabHeaderText">
            <Setter Property="Foreground" Value="#C8C8C8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:selected TextBlock.TabHeaderText">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Border.TabActiveIndicator">
            <Setter Property="Height" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:selected Border.TabActiveIndicator">
            <Setter Property="Opacity" Value="0"/>
        </Style>
        <Style Selector="Button.TabClose">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.55"/>
        </Style>
        <Style Selector="Button.TabClose TextBlock.TabIconGlyph">
            <Setter Property="Foreground" Value="#AEB5BD"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:selected Button.TabClose">
            <Setter Property="Opacity" Value="0.85"/>
        </Style>
        <Style Selector="ListBox.TabStripList > ListBoxItem:pointerover Button.TabClose">
            <Setter Property="Opacity" Value="1"/>
        </Style>
        <Style Selector="Button.TabClose:pointerover">
            <Setter Property="Background" Value="#3B3B3B"/>
        </Style>
        <Style Selector="Button.TabClose:pointerover TextBlock.TabIconGlyph">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Button.AddTab">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="BorderBrush" Value="#2C2C2C"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MaxWidth" Value="32"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style Selector="Button.AddTab:pointerover">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>
        <Style Selector="Button.AddTab:pressed">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
        </Style>
        <Style Selector="Button.AddTab TextBlock.TabIconGlyph">
            <Setter Property="Foreground" Value="#C8C8C8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="LineHeight" Value="16"/>
        </Style>
        <Style Selector="ListBox.ServerList > ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="4 1"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="ListBox.ServerList > ListBoxItem:selected">
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="ListBox.ServerList > ListBoxItem:pointerover">
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="ListBoxItem.DropBefore">
            <Setter Property="BorderBrush" Value="#4AA3FF"/>
            <Setter Property="BorderThickness" Value="0,2,0,0"/>
            <Setter Property="Background" Value="#1E4AA3FF"/>
        </Style>
        <Style Selector="ListBoxItem.DropAfter">
            <Setter Property="BorderBrush" Value="#4AA3FF"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Background" Value="#1E4AA3FF"/>
        </Style>
        <Style Selector="ListBox.ServerList.DropAppend">
            <Setter Property="BorderBrush" Value="#4AA3FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#144AA3FF"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Border.FolderDropTarget">
            <Setter Property="BorderBrush" Value="#4AA3FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#144AA3FF"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Border.FolderHeader">
            <Setter Property="Padding" Value="2 0"/>
        </Style>
        <Style Selector="Expander.FolderGroup /template/ ToggleButton#PART_toggle">
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="Padding" Value="4 0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Expander.FolderGroup /template/ ToggleButton#PART_toggle /template/ Border">
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Expander.FolderGroup /template/ ToggleButton#PART_toggle:pointerover /template/ Border">
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Expander.FolderGroup /template/ ToggleButton#PART_toggle:pressed /template/ Border">
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Expander.FolderGroup /template/ Border">
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Expander.FolderGroup">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style Selector="Expander.FolderGroup /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="ListBox.FolderList">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Selector="ListBox.FolderList > ListBoxItem">
            <Setter Property="Padding" Value="4,3,4,1"/>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *">
      
      <SplitView Grid.Row="1" DisplayMode="CompactInline" IsPaneOpen="{Binding IsSidebarOpen}"
                 OpenPaneLength="250" CompactPaneLength="30">
        <SplitView.Pane>
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Sidebar Header -->
                <Border Grid.Row="0" Classes="SidebarToolbar">
                <StackPanel Orientation="Horizontal" Spacing="0" Margin="0" Height="28" VerticalAlignment="Top">
                    <Button Command="{Binding ToggleSidebarCommand}"
                            ToolTip.Tip="Toggle Sidebar"
                            Classes="SidebarTopButton SidebarToggle"
                            Classes.Active="{Binding #Root.DataContext.IsSidebarOpen}">
                        <PathIcon Classes="SidebarGlyph"
                                  Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"/>
                    </Button>
                    <Button Command="{Binding AddServerCommand}" ToolTip.Tip="Add Server"
                            IsVisible="{Binding #Root.DataContext.IsSidebarOpen}" Classes="SidebarTopButton SidebarAction">
                        <PathIcon Classes="SidebarGlyph"
                                  Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                    </Button>
                    <Button Command="{Binding AddFolderCommand}" ToolTip.Tip="Add Folder"
                            IsVisible="{Binding #Root.DataContext.IsSidebarOpen}" Classes="SidebarTopButton SidebarAction">
                        <PathIcon Classes="SidebarGlyph"
                                  Data="M10,4L12,6H20A2,2 0 0 1 22,8V18A2,2 0 0 1 20,20H4A2,2 0 0 1 2,18V6A2,2 0 0 1 4,4H10Z"/>
                    </Button>
                    <TextBlock Text="Servers"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               IsVisible="{Binding #Root.DataContext.IsSidebarOpen}"/>
                </StackPanel>
                </Border>
                
                <!-- Server List -->
                <StackPanel Grid.Row="1"
                            Spacing="2"
                            IsVisible="{Binding #Root.DataContext.IsSidebarOpen}">
                     <ListBox x:Name="RootServerList"
                              ItemsSource="{Binding RootServers}"
                              Background="Transparent"
                              MinHeight="24"
                              Classes="ServerList"
                              Tag="root"
                              DragDrop.AllowDrop="True"
                              DragDrop.DragOver="OnServerListDragOver"
                              DragDrop.DragLeave="OnServerListDragLeave"
                              DragDrop.Drop="OnServerListDrop"
                              DoubleTapped="OnServerListDoubleTapped">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6" Background="Transparent">
                                    <StackPanel.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Edit" 
                                                      Command="{Binding #Root.DataContext.EditServerCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="Delete" 
                                                      Command="{Binding #Root.DataContext.DeleteServerCommand}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </StackPanel.ContextMenu>
                                    <!-- Icon -->
                                    <TextBlock Classes="IconGlyph" Text="ðŸ–¥ï¸" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                                    <StackPanel IsVisible="{Binding #Root.DataContext.IsSidebarOpen}">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding Host}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <ItemsControl ItemsSource="{Binding Folders}" HorizontalAlignment="Stretch">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="True" HorizontalAlignment="Stretch" Classes="FolderGroup">
                                    <Expander.Header>
                                        <Border Background="Transparent"
                                                HorizontalAlignment="Stretch"
                                                Classes="FolderHeader"
                                                Tag="FolderHeader"
                                                DragDrop.AllowDrop="True"
                                                DragDrop.DragOver="OnFolderHeaderDragOver"
                                                DragDrop.DragLeave="OnFolderHeaderDragLeave"
                                                DragDrop.Drop="OnFolderHeaderDrop">
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Rename"
                                                              Command="{Binding #Root.DataContext.RenameFolderCommand}"
                                                              CommandParameter="{Binding}"/>
                                                    <MenuItem Header="Delete"
                                                              Command="{Binding #Root.DataContext.DeleteFolderCommand}"
                                                              CommandParameter="{Binding}"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <StackPanel Orientation="Horizontal"
                                                        Spacing="6"
                                                        VerticalAlignment="Center">
                                                <TextBlock Classes="IconGlyph"
                                                           Text="ðŸ“"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           TextAlignment="Center"/>
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Expander.Header>
                                    <Grid RowDefinitions="Auto">
                                        <ListBox ItemsSource="{Binding Servers}"
                                                 Background="Transparent"
                                                 MinHeight="24"
                                                 IsVisible="{Binding HasServers}"
                                                 Classes="ServerList FolderList"
                                                 Tag="{Binding}"
                                                 DragDrop.AllowDrop="True"
                                                 DragDrop.DragOver="OnServerListDragOver"
                                                 DragDrop.DragLeave="OnServerListDragLeave"
                                                 DragDrop.Drop="OnServerListDrop"
                                                 DoubleTapped="OnServerListDoubleTapped">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="6" Background="Transparent">
                                                        <StackPanel.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Edit" 
                                                                          Command="{Binding #Root.DataContext.EditServerCommand}"
                                                                          CommandParameter="{Binding}"/>
                                                                <MenuItem Header="Delete" 
                                                                          Command="{Binding #Root.DataContext.DeleteServerCommand}"
                                                                          CommandParameter="{Binding}"/>
                                                            </ContextMenu>
                                                        </StackPanel.ContextMenu>
                                                        <TextBlock Classes="IconGlyph" Text="ðŸ–¥ï¸" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                                                        <StackPanel IsVisible="{Binding #Root.DataContext.IsSidebarOpen}">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                                            <TextBlock Text="{Binding Host}" FontSize="10" Foreground="Gray"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <Border IsVisible="{Binding !HasServers}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="8,4,8,8"
                                                Padding="2"
                                                DragDrop.AllowDrop="True"
                                                Tag="{Binding}"
                                                DragDrop.DragOver="OnEmptyFolderDragOver"
                                                DragDrop.DragLeave="OnEmptyFolderDragLeave"
                                                DragDrop.Drop="OnEmptyFolderDrop">
                                            <TextBlock Text="empty.."
                                                       FontSize="10"
                                                       Foreground="#8A929B"/>
                                        </Border>
                                    </Grid>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </SplitView.Pane>

        <SplitView.Content>
            <Grid RowDefinitions="Auto,*">
                <ListBox Grid.Row="0"
                         Classes="TabStripList"
                         ItemsSource="{Binding TabItems}"
                         SelectedItem="{Binding SelectedTabItem}"
                         Background="#141414"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="0"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.DataTemplates>
                                    <DataTemplate DataType="vm:SessionViewModel">
                                        <Border Classes="TabHeader">
                                            <Grid ColumnDefinitions="Auto,*,Auto"
                                                  ColumnSpacing="6"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Stretch">
                                                <TextBlock Classes="TabIconGlyph"
                                                           Grid.Column="0"
                                                           Text="â–£"/>
                                                <TextBlock Classes="TabHeaderText"
                                                           Grid.Column="1"
                                                           Text="{Binding Header}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <Button Command="{Binding #Root.DataContext.CloseTabCommand}"
                                                        CommandParameter="{Binding}"
                                                        Classes="TabClose"
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        ToolTip.Tip="Close Tab">
                                                    <TextBlock Classes="TabIconGlyph" Text="âœ•"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                    <DataTemplate DataType="vm:AddTabViewModel">
                                        <Button Classes="AddTab"
                                                Command="{Binding #Root.DataContext.AddTabCommand}"
                                                ToolTip.Tip="New Server">
                                            <TextBlock Classes="TabIconGlyph" Text="+"/>
                                        </Button>
                                    </DataTemplate>
                                </ContentControl.DataTemplates>
                            </ContentControl>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ContentControl Grid.Row="1" Content="{Binding SelectedTabItem}" Margin="0">
                    <ContentControl.DataTemplates>
                        <DataTemplate DataType="vm:SessionViewModel">
                            <views:FileBrowserView Margin="0"/>
                        </DataTemplate>
                        <DataTemplate DataType="vm:AddTabViewModel">
                            <Panel/>
                        </DataTemplate>
                    </ContentControl.DataTemplates>
                </ContentControl>
            </Grid>
        </SplitView.Content>
      </SplitView>
    </Grid>

</Window>
